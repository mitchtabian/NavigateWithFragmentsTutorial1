<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#FF4081"></solid>
            <stroke
                android:color="#000"
                android:width="2dp"></stroke>
            <corners
                android:radius="3dp"></corners>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"></padding>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#0277BD"></solid>
            <stroke
                android:color="#000"
                android:width="2dp"></stroke>
            <corners
                android:radius="3dp"></corners>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"></padding>
        </shape>
    </item>
</selector>